@model IEnumerable<ProyectoFinal.Models.FacturaModel>

@{
    ViewBag.Title = "Lista de facturas deshabilitadas";
}
@if (Model.Count() != 0)
{
    bool esAdmin = (bool)Session["esAdmin"];
    <div class="jumbotron" style="background-color: rgba(255,255,255,0.6)">
        <h2>Lista de facturas deshabilitadas</h2>

        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Cédula del cliente
                </th>
                <th>
                    Monto total
                </th>
                <th>
                    Opciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idFactura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ci)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.montoTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Detalles", new { idFactura = item.idFactura }, new { @class = "btn btn-info" })
                       @if (esAdmin)
                       {
                        @Html.ActionLink("Habilitar", "Habilitar", new { idFactura = item.idFactura }, new { @class = "btn btn-success" })
                       }
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <h2>La lista de facturas deshabilitadas está vacía</h2>
    }

    <a class="btn btn-default" href="/Factura/ListarFacturasHabilitadas">Volver</a>
