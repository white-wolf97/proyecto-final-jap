@model IEnumerable<ProyectoFinal.Models.ProductoModel>

@{
    ViewBag.Title = "ListarProductosDeshabilitados";
    bool esAdmin = (bool)Session["esAdmin"];                    
}

@if (Model.Count() != 0)
{
        
        <div class="jumbotron" style="background-color: rgba(255,255,255,0.6)">
            <h2>Lista de productos deshabilitados en el sistema</h2>
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        ID
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idProducto)
                        </td>
                        <td>
                            @if (esAdmin)
                            {
                            @Html.ActionLink("Habilitar", "Habilitar", new { id = item.idProducto }, new { @class = "btn btn-success" })
                            }
                        </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @if (esAdmin)
                        {
                        <a class="btn btn-success" href="/Producto/HabilitarTodos">Habilitar Todos</a>
                        }
                    </td>

                </tr>

            </table>
            </div>
            }
            else
            {
            <h2>La lista seleccionada está vacía</h2>
            }
            <a class="btn btn-default" href="/Producto/ListarProductosHabilitados">Volver</a>
