@model IEnumerable<ProyectoFinal.Models.UsuarioModel>

@{
    ViewBag.Title = "ListarUsuariosDeshabilitados";
}
@if (Model.Count() != 0)
{

    
    <div class="jumbotron" style="background-color: rgba(255,255,255,0.6)">
        <h2>Lista de usuarios deshabilitados</h2>
        <table class="table">
            <tr>
                <th>
                    Nombre de usuario
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreUser)
                    </td>
                    <td>
                        @Html.ActionLink("Habilitar", "Habilitar", new { id = item.nombreUser }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }
        </table>
        </div>
        }
        else
        {
        <h2>La lista de usuarios deshabilitados está vacía</h2>
        }
